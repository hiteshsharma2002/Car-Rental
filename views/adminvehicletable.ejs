<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
        }

        .user-table {
            width: 80%;
            margin-left: 250px;
            margin-top: 70px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #0b51e6;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .edit,
        .delete {
            padding: 6px 12px;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
        }

        .edit {
            background-color: #4CAF50;
        }

        .edit:hover {
            background-color: #45a049;
        }

        .delete {
            background-color: #f44336;
        }

        .delete:hover {
            background-color: #e53935;
        }

        td a {
            margin-right: 10px;
        }

        .no-data {
            text-align: center;
            padding: 20px;
            color: #777;
        }
    </style>
</head>

<body>

    

    <form action="/admin/vehicle/manage" method="get">
        <input type="text" id="search" value="<%= searchQuery %>" placeholder="enter car name here" name="search">
    <button type="submit" >Search</button>

    
    </form>
    
            <div class="user-table">
                <table>
                    <thead>
                        <tr>
                            <th>Car Name</th>
                            <th>Brand Name</th>
                            <th>Price</th>
                            <th>Fuel</th>
                            <th>Car Model</th>
                            <th colspan="2">Action</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% if (vehdata.length> 0) { %>
                            <% vehdata.forEach(item=> { %>
                                <tr>
                                    <td>
                                        <%= item.title %>
                                    </td>
                                    <td>
                                        <%= item.car %>
                                    </td>
                                    <td>
                                        <%= item.price %>
                                    </td>
                                    <td>
                                        <%= item.fuel %>
                                    </td>
                                    <td>
                                        <%= item.carmodel %>
                                    </td>
                                    
                                    <td>
                                        <a href="/admin/editveh/<%= item._id %>" class="edit">Edit</a>
                                        <a href="/admin/deleteveh/<%= item._id %>" class="delete">Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="no-data">No data available</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>

</body>

</html>